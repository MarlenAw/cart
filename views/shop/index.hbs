<div class="row">
	<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		<div class="alert alert-success" id="success" {{#if noMessage}}hidden{{/if}}>
			{{successMsg}}
		</div>
	</div>
</div>

{{#each products }}
<!--get "this." from the array in productSeeder.js-->
	<div class="row">
		{{#each this}}
				  <div class="col-xs-12 col-sm-6 col-md-3">
					<div class="thumbnail">
					  <img src="{{this.imagePath}}" alt="blueshirt" class="img-responsive">
					  <div class="caption">
						<h3>{{this.title}}</h3>
						  <p class="desc">{{this.description}}</p>
						<div class="clearfix">
							<div class="price">{{this.price}}$</div>
							<!--<button type="button" class="btn btn-warning "><i class="fa fa-shopping-cart" aria-hidden="true"></i></button>-->
							<a href="/add-to-cart/{{ this._id }}" class="btn btn-warning" role="button">
								<i class="fa fa-shopping-cart" aria-hidden="true"></i>
							</a>
						</div>
					  </div>
					</div>
				 </div>
		{{/each}}
</div><!--END OF ROW #1-->

{{/each}}



